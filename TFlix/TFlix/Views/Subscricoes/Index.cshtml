@using Microsoft.AspNetCore.Identity
@model IEnumerable<TFlix.Models.Subscricao>

@{
    ViewData["Title"] = "Index";
}


    <h1>Lista de Subscrições</h1>
    @if (User.IsInRole("Administrador")){


    <p>
        <a asp-action="Create">Criar novas Subscrições</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Utilizador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Preco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataFim)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Filmes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Series)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Utilizador.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duracao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Preco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataFim)
                    </td>
                    <th>
                        @foreach (var item2 in item.Filmes) {
                            <li>@Html.DisplayFor(modelItem => item2.Titulo)</li>
                        }
                    </th>
                    <th>
                         @foreach (var item2 in item.Series) {
                            <li>@Html.DisplayFor(modelItem => item2.Titulo)</li>
                        }
                    </th>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else if (User.IsInRole("Cliente")){
    <p>
        <a asp-action="Create">Criar novas Subscrições</a>
    </p>

         <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Utilizador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Preco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataFim)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Filmes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Series)
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Utilizador.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duracao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Preco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataFim)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.Filmes)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Series)
                    </th>
                </tr>
            }
        </tbody>
    </table>

}