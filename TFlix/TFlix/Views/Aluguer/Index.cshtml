@model IEnumerable<TFlix.Models.Aluga>

@{
    ViewData["Title"] = "Lista de Alugueres";
}

@if (User.IsInRole("Administrador")){

    <h1>Lista de Alugueres</h1>

    <p>
        <a asp-action="Create">Criar alugueres</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Filme)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Utilizador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Preco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataFim)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Filme.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Utilizador.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFim)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}else if (User.IsInRole("Cliente")) { 

    <h1>Alugueres</h1>

     <div class="columns">
      <ul class="price">
        <li class="header">Pack 1</li>
        <li class="grey">9,99€</li>
        <li class="descr">2 Filmes</li>
        <li class="descr">Qualidade: 1080p</li>
        <li class="grey"><a class="button-34" asp-action="AlterarRole">Aluga Aqui</a>
            </li>
      </ul>
    </div> 

      <div class="columns">
      <ul class="price">
        <li class="header">Pack 2</li>
        <li class="grey">14,99€</li>
        <li class="descr">4 Filmes</li>
        <li class="descr">Qualidade: 1080p</li>
        <li class="grey"><a class="button-34" asp-action="AlterarRole">Aluga Aqui</a></li>
      </ul>
    </div>

     <div class="columns">
      <ul class="price">
        <li class="header">Pack 3</li>
        <li class="grey">19,99€</li>
        <li class="descr">8 Filmes</li>
        <li class="descr">Qualidade: 1080p</li>
        <li class="grey"><a class="button-34" asp-action="AlterarRole">Aluga Aqui</a></li>
      </ul>
    </div>

    <h3>Por favor faça Logout depois de escolher o pack para ter acesso ás suas série e filmes.</h3>

}