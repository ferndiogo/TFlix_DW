@model TFlix.Models.Aluga

@{
    ViewData["Title"] = "Criar";
}


<h1>Criar</h1>

<h4>Aluguer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label class="control-label">Utilizador</label>
                <select asp-for="UtilizadorFK" class ="form-control" asp-items="ViewBag.UtilizadorFK">
                    <option value="">Escolha um utilizador</option>
                </select>
                <br />
            </div>
            <div class="form-group">
                <a href="~/Filmes" class="button">Lista de filmes disponíveis</a>
            </div>
            <div class="form-group">
                <br />
                <label class="control-label">Filme</label>
                <select asp-for="FilmeFK" class ="form-control" asp-items="ViewBag.FilmeFK">
                    <option value="">Escolha um filme</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AuxPreco" class="control-label"></label>
                <select asp-for="AuxPreco" class ="form-control">
                    <option value="5,99">5,99 por 1 filme (1 ano)</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Criar" class="button-34" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
